<header class="header {{classes}}">
    <div class="header__top" role="banner">
        <div class="container">
            <div class="grid grid--gutterless">
                <div class="grid__col col-6@s">
                    <div class="logo">
                        <a href="#1"><img src="../../assets/img/ons-logo-white.svg" alt="Office for National Statistics logo" class="logo__img header__logo"></a>
                    </div>
                </div>
                <div class="grid__col col-6@s">
                    <nav class="nav nav--horizontal nav--light u-d-no--@xs@s u-fr" aria-label="Site services menu" >
                        <ul class="nav__list" role="menubar">
                            {{#each services}}
                                <li class="nav__item" role="menuitem"><a href="{{link}}" class="nav__link">{{text}}</a></li>
                            {{/each}}
                        </ul>
                    </nav>
                </div>  
            </div>
        </div>
    </div>
    <div class="header__main">
        <div class="container">
            <div class="grid grid--gutterless grid--align-mid u-cf">
                <div class="grid__col {{#if button}}col-10@xs col-6@s{{/if}}">
                    <h1 class="header__title">{{title}}</h1>
                    {{#if description}}
                    <p class="header__desc">{{description}}</p>
                    {{/if}}
                </div>
                <button class="btn btn--burger js-nav-btn u-fr" type="button" id="menu-btn" aria-expanded="false" aria-controls="main-nav" aria-label="Toggle main navigation" aria-haspopup="true"><span>Main Menu</span></button>
                {{#if button}}
                    <div class="u-fr u-d-no--@xs@s">
                        {{> @button btn-classes='btn--ghost' label=button}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="header__nav">
        <div class="container">
            <nav class="nav nav--horizontal nav--light nav--main nav--h-m js-main-nav" aria-label="Main menu" id="main-nav">
                <ul class="nav__list" aria-label="Main menu" role="menubar">
                    {{#each main}}
                    <li class="nav__item {{classes}}" role="menuitem"><a href="{{link}}" class="nav__link">{{text}}</a></li>
                    {{/each}}
                    {{#each services}}
                    <li class="nav__item nav__item--secondary u-d-no--@s@xxl" role="menuitem"><a href="{{link}}" class="nav__link">{{text}}</a></li>
                    {{/each}}
                    <li class="nav__item u-d-no--@s@xxl" role="menuitem">{{> @button btn-classes='btn--ghost' label=button}}</li>
                </ul>
            </nav>
        </div>
    </div>
</header>