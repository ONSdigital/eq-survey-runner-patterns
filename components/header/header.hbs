<header class="header {{classes}}">
    {{#if beta}}
    {{> @beta-bar }}
    {{/if}}
    <div class="header__top" role="banner">
        <div class="container">
            <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
                <div class="grid__col col-auto">
                    <div class="logo">
                        <img src="{{path '/assets/img/ons-logo-black-{{#if cy}}cy{{else}}en{{/if}}.svg'}}" alt="{{#if cy}}Logo Swyddfa Ystadegau Gwladol{{else}}Office for National Statistics logo{{/if}}" class="logo__img header__logo--print">
                        <a href="#1">
                            <img src="{{path '/assets/img/ons-logo-{{#if internal}}white{{else}}pos{{/if}}{{#if cy}}-cy{{else}}{{/if}}.svg'}}" alt="{{#if cy}}Logo Swyddfa Ystadegau Gwladol{{else}}Office for National Statistics logo{{/if}}" class="logo__img header__logo print__hidden">
                        </a>
                    </div>
                </div>
                {{#if services}}
                <div class="grid__col col-auto u-flex-no-shrink u-d-no@xs@m">
                    <nav class="nav nav--inline {{#if internal}}nav--light{{/if}} u-d-no@xs@m u-fr" aria-label="Site services menu">
                        <ul class="nav__list" role="menubar" aria-label="Site services menu">
                            {{#each services}}
                            <li class="nav__item" role="menuitem"><a href="{{link}}" class="nav__link">{{text}}</a></li>
                            {{/each}}
                        </ul>
                    </nav>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="header__main {{#if nav}}header__main--border{{/if}}">
        <div class="container">
            <div class="grid grid--gutterless grid--flex grid--between grid--vertical-center grid--no-wrap">
                <div class="grid__col col-auto u-flex-shrink">
                    <h1 class="header__title">{{title}}</h1>
                    {{#if description}}
                    <p class="header__desc">{{description}}</p>
                    {{/if}}
                </div>
                {{#if (or button nav)}}
                <div class="grid__col col-auto u-flex-no-shrink">
                  {{#if button}}
                    {{> @button btn-classes="btn--ghost u-ml-s u-d-no@xs@m" label=button}}
                  {{/if }}
                  {{#if nav}}
                    {{> @button--mobile label="Menu"}}
                  {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    {{#if nav}}
    <div class="header__nav">
        <div class="container container--gutterless@xs@m">
            <nav class="nav nav--inline nav--light nav--header nav--h-m js-main-nav" aria-label="Main menu" id="main-nav">
                <ul class="nav__list" aria-label="Navigation menu" role="menubar">
                    {{#each main}}
                    <li class="nav__item {{classes}} {{#if childItems}}nav__item--hasChildList{{/if}}" role="menuitem" {{#if aria-current}}aria-current="page"{{/if}}><a href="{{link}}" class="nav__link {{#if childItems}}js-toggle-childList{{/if}}">{{text}}</a>
                        {{#if childItems}}
                            <ul class="nav__list nav__list--childList nav--h-m u-d-no@m">
                                {{#each childItems}}
                                    <li class="nav__item" role="menuitem"><a href="{{link}}" class="nav__link">{{text}}</a></li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </li>
                    {{/each}}
                    {{#each services}}
                    <li class="nav__item {{#if @first}}nav__item--secondary{{/if}} u-d-no@m" role="menuitem"><a href="{{link}}" class="nav__link print__hidden">{{text}}</a></li>
                    {{/each}}
                    {{#if button}}
                    <li class="nav__item nav__item--button u-d-no@m" role="menuitem">{{> @button btn-classes='btn--ghost print__hidden' label=button}}</li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
    {{/if}}
</header>
