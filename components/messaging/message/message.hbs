<div class="message{{#if message_variant}} message--{{message_variant}}{{/if}}" id="messageID{{#if message_variant}}{{message_variant}}{{/if}}">
  <div class="metadata metadata--message">
    <dl class="metadata__list u-mb-s">
      <dt class="metadata__term u-vh">From:</dt>
      <dd class="metadata__value venus">{{#if message_internal}}ONS Business Surveys Team{{else}}Jacky Turner{{/if}}</dd>
      <dt class="metadata__term u-vh">Sent:</dt>
      <dd class="metadata__value metadata__value--datetime pluto">{{message_datetime}}</dd>
    </dl>
  </div>
  <div class="message__body">
    {{{message_body}}}
  </div>
</div>
