<div class="answer__fields js-fields">
  {{> @label label_text="Please provide some feedback" label_for=textarea_id label_id="description-question" label_description="For example describe any difficulties you experienced in the use of this service"}}
  <textarea class="input input--textarea{{#if charlimit}} js-charlimit-input{{/if}}" cols="60"
            rows="8" id="{{textarea_id}}" name="{{textarea_id}}"
            {{#if charlimit}}maxlength="{{charlimit}}"{{/if}}
            aria-describedby="description-question" 
            {{#if charlimit}}data-maxlength="{{charlimit}}" data-char-limit-ref="{{textarea_id}}-remaining"{{/if}}
            ></textarea>
  {{#if charlimit}}<div class="input__limit u-mt-xs mercury" data-qa="textarea-with-limit" id="{{textarea_id}}-remaining" aria-live="polite">You have <span>{{charlimit}}</span>.</div>{{/if}}
</div>
