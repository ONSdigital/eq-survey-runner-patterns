<fieldset class="fieldgroup fieldgroup--duration">

  <legend id="duration-label" class="fieldgroup__title u-fs-r--b">{{label_time}}</legend>

  <div class="fieldgroup__fields">
    <div class="field">
      <div class="input-type input-type--unit input-type--group">
        <input data-qa="input-number"
               id="{{label_time}}1"
               class="input input--number input--with-unit input--block"
